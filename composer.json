{
    "name": "spatie/laravel-csp",
    "description": "Add CSP headers to the responses of a Laravel app",
    "keywords": [
        "spatie",
        "laravel-csp",
        "content-security-policy",
        "security",
        "headers",
        "csp",
        "laravel"
    ],
    "homepage": "https://github.com/spatie/laravel-csp",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Verhelst",
            "email": "tvke91@gmail.com",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "Illuminate/Support": "^5.6"
    },
    "require-dev": {
        "larapack/dd": "^1.0",
        "phpunit/phpunit": "^7.0",
        "orchestra/testbench": "~3.5"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Csp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Csp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Csp\\CspServiceProvider"
            ]
        }
    }
}
